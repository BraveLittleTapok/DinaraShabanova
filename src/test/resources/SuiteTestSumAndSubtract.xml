<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Sum And Sub Test">

    <test name="Sum Test">
        <classes>
            <class name="homework_1.tests.SumTest">
                <methods>
                    <include name="sumTestNumberUnderMaxValue"/>
                    <include name="sumTestNumberOverMaxValue"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Subtract Test">
        <classes>
            <class name="homework_1.tests.SubtractTest">
                <methods>
                    <include name="subtractTestNumberUnderMaxValue"/>
                    <include name="subtractTestNumberOverMaxValue"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>